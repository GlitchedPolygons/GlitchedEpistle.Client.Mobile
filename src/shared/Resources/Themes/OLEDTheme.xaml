<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
                    xmlns:i="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Mobile.Extensions;assembly=GlitchedPolygons.GlitchedEpistle.Client.Mobile"
                    x:Class="GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Themes.OLEDTheme">

    <Color x:Key="PrimaryColor">#00b6f2</Color>
    <Color x:Key="PrimaryDarkColor">#009fb7</Color>
    <Color x:Key="ErrorMessageColor">Red</Color>
    <Color x:Key="PrimaryTintColor">#FFFFFF</Color>
    <Color x:Key="PageBackgroundColor">#000000</Color>
    <Color x:Key="NavigationBarColor">#0095b7</Color>
    <Color x:Key="PrimaryTextColor">#ffffff</Color>
    <Color x:Key="SecondaryTextColor">#bdbdbd</Color>
    <Color x:Key="SubTextColor">#a5a5a5</Color>
    <Color x:Key="OverlayTextColor">#FFFFFF</Color>
    <Color x:Key="TransparentBackgroundColor">#56000000</Color>
    <Color x:Key="SeparatorLineColor">#464646</Color>

    <x:String x:Key="HeaderButtonIdleColorHex">#ffffff</x:String>
    <x:String x:Key="HeaderButtonPressedColorHex">#00b4dd</x:String>
    <x:String x:Key="LogoutHeaderButtonPressedColorHex">#cc0000</x:String>
    
    <Style x:Key="CreateConvoButtonStyle" TargetType="ff:CachedImage">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Source" Value="{i:ImageResource GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Images.plus-icon-white.png}" />
    </Style>

    <Style x:Key="JoinConvoButtonStyle" TargetType="ff:CachedImage">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Source" Value="{i:ImageResource GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Images.join-icon-white.png}" />
    </Style>

    <Style x:Key="ChangePasswordButtonStyle" TargetType="ff:CachedImage">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Source" Value="{i:ImageResource GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Images.change-pw-icon-white.png}" />
    </Style>
    
    <Style x:Key="SettingsButtonStyle" TargetType="ff:CachedImage">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Source" Value="{i:ImageResource GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Images.settings-icon-white.png}" />
    </Style>

    <Style x:Key="LogoutButtonStyle" TargetType="ff:CachedImage">
        <Setter Property="Margin" Value="0" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Source" Value="{i:ImageResource GlitchedPolygons.GlitchedEpistle.Client.Mobile.Resources.Images.logout-icon-white.png}" />
    </Style>
</ResourceDictionary>