<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             xmlns:i="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Mobile.Extensions"
             xmlns:converters="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Mobile.Converters"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             xmlns:zxcm="clr-namespace:ZXing.Common;assembly=zxing.portable"
             x:Class="GlitchedPolygons.GlitchedEpistle.Client.Mobile.Views.LoginPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="Center" 
                         VerticalOptions="Center"
                         WidthRequest="275" 
                         Margin="32,32,32,50">

                <Label Style="{DynamicResource TitleLabelStyle}"
                       FontAttributes="Bold"
                       Text="{i:Translate WelcomeLabel}"/>

                <Label Text="{Binding ErrorMessage}"
                       TextColor="{DynamicResource ErrorMessageColor}"
                       LineBreakMode="WordWrap"
                       HorizontalOptions="Start"
                       FontSize="14" />

                <Label FontSize="16" 
                       Margin="0,0,0,10" 
                       Style="{DynamicResource SubLabelStyle}"
                       Text="{i:Translate PleaseLoginLabel}"/>

                <Entry MinimumWidthRequest="250"
                       IsPassword="False"
                       x:Name="UserIdTextBox"
                       MaxLength="256"
                       Style="{DynamicResource EntryStyle}"
                       Placeholder="{i:Translate UserIdLabel}"
                       Text="{Binding UserId}" 
                       TextChanged="UserIdTextBox_TextChanged" />

                <Entry x:Name="PasswordBox" 
                       IsPassword="True"
                       MinimumWidthRequest="250"
                       Style="{DynamicResource EntryStyle}"
                       Placeholder="{i:Translate PasswordLabel}"
                       Text="{Binding Password}"
                       TextChanged="PasswordBox_TextChanged"/>

                <Entry  x:Name="TotpTextBox"
                        MinimumWidthRequest="250"
                        MaxLength="128"
                        Style="{DynamicResource EntryStyle}"
                        Placeholder="{i:Translate TotpLabel}"
                        Text="{Binding Totp}"
                        TextChanged="TotpTextBox_TextChanged" />

                <StackLayout Margin="0,20,0,0">

                    <Button Text="{i:Translate ChangeServerButton}"
                            x:Name="ChangeServerButton"
                            IsEnabled="{Binding UIEnabled}"
                            Command="{Binding EditServerUrlCommand}"/>

                    <Button Text="{i:Translate RegisterButton}"
                            x:Name="RegisterButton"
                            Command="{Binding RegisterCommand}" />

                    <Button Text="{i:Translate LoginButton}"
                            x:Name="LoginButton" 
                            IsVisible="{Binding UIEnabled}"
                            Command="{Binding LoginCommand}"/>

                    <Button Text="{i:Translate AttemptingLoginButton}"
                            IsEnabled="False"
                            IsVisible="{Binding UIEnabled, Converter={converters:InverseBoolConverter}}"/>
                </StackLayout>

                <!--
                
                <zxing:ZXingBarcodeImageView
                            BarcodeValue="HELLO WORLD :D"
                            BarcodeFormat="QR_CODE"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand" IsEnabled="False">
                    <zxing:ZXingBarcodeImageView.BarcodeOptions>
                        <zxcm:EncodingOptions Width="200" Height="200" />
                    </zxing:ZXingBarcodeImageView.BarcodeOptions>
                </zxing:ZXingBarcodeImageView>
                
                -->
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
    