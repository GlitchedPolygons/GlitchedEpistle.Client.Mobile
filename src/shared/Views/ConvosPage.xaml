<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Mobile.Extensions"
             xmlns:converters="clr-namespace:GlitchedPolygons.GlitchedEpistle.Client.Mobile.Converters;assembly=GlitchedPolygons.GlitchedEpistle.Client.Mobile"
             x:Class="GlitchedPolygons.GlitchedEpistle.Client.Mobile.Views.ConvosPage"
             mc:Ignorable="d"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout HorizontalOptions="FillAndExpand">

        <StackLayout Padding="5,4,5,1">
            <Label Style="{DynamicResource MediumLabelStyle}"
                   Text="{Binding Username}"
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   MaxLines="1" />

            <Label Style="{DynamicResource SubLabelStyle}"
                   Text="{Binding UserId}"
                   HorizontalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   MaxLines="1" 
                   Margin="0,-5,0,0"/>
        </StackLayout>

        <BoxView HeightRequest="4"
                 HorizontalOptions="FillAndExpand"
                 Color="{DynamicResource PrimaryColor}" />

        <StackLayout Orientation="Horizontal" 
                     Padding="0"
                     Margin="0,3"
                     HorizontalOptions="CenterAndExpand">
            <ImageButton Command="{Binding CreateConvoCommand}"
                         Aspect="Fill"
                         WidthRequest="64"
                         HeightRequest="64"
                         Style="{DynamicResource CreateConvoButtonStyle}" />
            <ImageButton Command="{Binding JoinConvoCommand}"
                         Aspect="Fill"
                         WidthRequest="64"
                         HeightRequest="64"
                         Style="{DynamicResource JoinConvoButtonStyle}" />
            <ImageButton Command="{Binding ChangePasswordCommand}"
                         Aspect="Fill"
                         WidthRequest="64"
                         HeightRequest="64"
                         Style="{DynamicResource ChangePasswordButtonStyle}" />
            <ImageButton Command="{Binding LogoutCommand}"
                         Aspect="Fill"
                         WidthRequest="64"
                         HeightRequest="64"
                         Style="{DynamicResource LogoutButtonStyle}" />
        </StackLayout>

        <BoxView Margin="0,0,0,0"
                 Style="{DynamicResource HorizontalSeparatorLineStyle}" />

        <ListView SeparatorVisibility="None"
                  HasUnevenRows="true"
                  ItemsSource="{Binding Convos}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="15,10"
                                     HorizontalOptions="FillAndExpand">
                            <StackLayout Orientation="Horizontal">
                                <Label VerticalOptions="FillAndExpand"
                                       VerticalTextAlignment="Center"
                                       HorizontalTextAlignment="Start"
                                       FontSize="20"
                                       Text="{Binding Name}"
                                       Style="{DynamicResource MediumLabelStyle}" />
                                <Label VerticalTextAlignment="Center"
                                       VerticalOptions="FillAndExpand"
                                       HorizontalTextAlignment="End"
                                       FontSize="20"
                                       Text="{Binding ExpirationUTC, Converter={converters:ConvoExpirationLabelConverter}}"
                                       Style="{DynamicResource MediumLabelStyle}" />
                            </StackLayout>
                            <Label VerticalTextAlignment="Center"
                                   VerticalOptions="FillAndExpand"
                                   FontSize="16"
                                   Text="{Binding Id}"
                                   Style="{DynamicResource SubLabelStyle}" />
                            <BoxView Style="{DynamicResource HorizontalSeparatorLineStyle}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>